<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/parent_layout"
                android:layout_width="match_parent"
                android:layout_height="96dp"
                android:paddingEnd="5dp">

    <RelativeLayout
            android:id="@+id/left_arrows"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/divider_view">

        <ImageView
                android:id="@+id/call_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_gravity="center"
                android:layout_marginEnd="8dp"
                android:background="@drawable/incoming_call_button_circle_background"
                android:clickable="true"
                android:scaleType="center"
                app:srcCompat="@drawable/ic_call_48dp"/>


        <ImageView
                android:id="@+id/left_arrow_1"
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/call_start"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_keyboard_arrow_right_green_48dp"/>

        <ImageView
                android:id="@+id/left_arrow_2"
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/left_arrow_1"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_keyboard_arrow_right_green_48dp"/>

        <ImageView
                android:id="@+id/left_arrow_3"
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/left_arrow_2"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_keyboard_arrow_right_green_48dp"/>
    </RelativeLayout>

    <View
            android:id="@+id/divider_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:background="@android:color/background_dark"/>

    <RelativeLayout
            android:id="@+id/right_arrows"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/divider_view">


        <ImageView
                android:id="@+id/right_arrow_3"
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/right_arrow_2"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_keyboard_arrow_left_red_48dp"/>

        <ImageView
                android:id="@+id/right_arrow_2"
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/right_arrow_1"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_keyboard_arrow_left_red_48dp"/>

        <ImageView
                android:id="@+id/right_arrow_1"
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/call_end"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_keyboard_arrow_left_red_48dp"/>

        <ImageView
                android:id="@+id/call_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center"
                android:layout_marginStart="8dp"
                android:adjustViewBounds="false"
                android:background="@drawable/call_end_button_circle_background"
                android:clickable="true"
                android:scaleType="center"
                app:srcCompat="@drawable/ic_call_end_48dp"/>
    </RelativeLayout>

</RelativeLayout>